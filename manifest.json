{
    "manifest_version": 3,
    "name": "ShareText",
    "version": "0.0.2",
    "description": "Quickly share text from your browser to your phone using QR codes. Just select, generate, and scan!",
    "permissions": [
      "contextMenus",
      "storage",
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  